/**
 * Definition for binary tree
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
 * };
 */
class Solution {
public:

    vector<int> preorderTraversal(TreeNode *root) {
        vector<int> res;
        if(root == NULL) return res;
        
        stack<TreeNode *> stk;
        stk.push(NULL);
        TreeNode *p = root;
        
        while(p != NULL) {
            res.push_back(p -> val);
            if(p -> right) stk.push(p -> right);
            if(p -> left) p = p -> left;
            else {
                p = stk.top();
                stk.pop();
            }
        }
        
        return res;
    }
};

// R 3ms
class Solution {
public:
    vector<int> preorderTraversal(TreeNode* root) {
        vector<int> res;
        if(root == NULL) return res;
        stack<TreeNode *> stk;
        stk.push(root);
        
        TreeNode *curNode = root;
        
        while(!stk.empty()) {
            res.push_back(curNode -> val);
            if(curNode -> right) stk.push(curNode -> right);
            if(curNode -> left) curNode = curNode -> left;
            else {
                curNode = stk.top();
                stk.pop();
            }
        }
        
        return res;
    }
};