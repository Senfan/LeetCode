/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:
    ListNode* removeNthFromEnd(ListNode* head, int n) {
        ListNode *pre = head, *cur = head;
        int cnt = 0;
        while(cur && cnt < n) {
            cnt++;
            cur = cur -> next;
        }
        if(cur == NULL) return head -> next;
        
        while(cur) {
            cur = cur -> next;
            if(cur)
                pre = pre -> next;
        }
        pre -> next = pre -> next -> next;
        
        return head;
    }
};