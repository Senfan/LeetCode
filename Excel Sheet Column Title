class Solution {
public:
    string convertToTitle(int n) {
        string res;
        int alp;
        while(n) {
            alp = n % 26;
            n /= 26;
            if(alp == 0) {
            	res += "Z";
            	n--;
            }
            else res += (char)(alp-1+'A');
        }
        reverse(res.begin(), res.end());
        return res;
    }
};